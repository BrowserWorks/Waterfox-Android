<resources>

    <style name="WaterFoxLightThemeGrey" parent="NormalThemeBase">
        <!-- Design system color attributes -->

        <!-- Layers -->
        <!-- Default Screen background, Frontlayer background, App Bar Top, App Bar Bottom, Frontlayer header -->
        <item name="layer1">@color/wx_light_grey_layer_color_1</item>
        <!-- Card background, Menu background, Dialog, Banner -->
        <item name="layer2">@color/wx_light_grey_layer_color_2</item>
