        <item name="scrim">@color/wx_light_grey_layer_color_scrim</item>

        <!-- Action -->
        <!-- Primary button, Snackbar, Floating action button, Chip selected -->
        <item name="actionPrimary">@color/wx_light_grey_action_color_primary</item>

        <!-- Text -->
        <!-- Primary text -->
        <item name="textPrimary">@color/wx_light_grey_text_color_primary</item>
        <!-- Secondary text -->
        <item name="textSecondary">@color/wx_light_grey_text_color_secondary</item>
        <!-- Disabled text -->
        <item name="textDisabled">@color/wx_light_grey_text_color_disabled</item>
        <!-- Warning text -->
        <item name="textWarning">@color/wx_light_grey_text_color_warning</item>
        <!-- Small heading, Text link -->
        <item name="textAccent">@color/wx_light_grey_text_color_accent</item>
        <!-- Text Inverted/On Color -->
        <item name="textOnColorPrimary">@color/wx_light_grey_text_color_oncolor_primary</item>
        <!-- Action Primary text -->
        <item name="textActionPrimary">@color/wx_light_grey_text_color_action_primary</item>

        <!-- Icon -->
        <!-- Secondary icon -->
        <item name="iconSecondary">@color/wx_light_grey_icon_color_secondary</item>
        <!-- Active tab -->
        <item name="iconActive">@color/wx_light_grey_icon_color_active</item>
        <!-- Icon inverted (on color) -->
        <item name="iconOnColor">@color/wx_light_grey_icon_color_oncolor</item>

        <!-- Border -->
        <!-- Default, Divider, Dotted -->
        <item name="borderPrimary">@color/wx_light_grey_border_color_primary</item>

        <!-- Active thumb color & Active track color (30% transparency) -->
        <item name="colorControlActivated">@color/accent_high_contrast_normal_theme</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/toggle_off_knob_normal_theme</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/toggle_off_track_normal_theme</item>
        <!-- sets the toolbar back button color, radio buttons / unselected checkboxes -->
        <item name="colorControlNormal">@color/wx_light_grey_text_color_primary</item>

        <!-- Updated color attributes -->
        <item name="accent">@color/accent_normal_theme</item>
        <item name="accentBright">@color/photonTeal70</item>
        <item name="accentHighContrast">@color/accent_high_contrast_normal_theme</item>
        <item name="neutral">@color/neutral_normal_theme</item>
        <item name="neutralFaded">@color/neutral_faded_normal_theme</item>
        <item name="accentUsedOnDarkBackground">@color/wx_light_grey_text_color_accent</item>
        <item name="toolbarStartGradient">@color/wx_light_grey_layer_color_1</item>
        <item name="toolbarCenterGradient">@color/wx_light_grey_layer_color_1</item>
        <item name="toolbarEndGradient">@color/wx_light_grey_layer_color_1</item>
        <item name="fillLinkFromClipboard">@color/fill_link_from_clipboard_normal_theme</item>
        <item name="syncDisconnected">@color/sync_disconnected_icon_fill_normal_theme</item>
        <item name="syncDisconnectedBackground">@color/sync_disconnected_background_normal_theme</item>
        <item name="onboardingDarkGradientStartBackground">@color/photonTeal70</item>
        <item name="onboardingDarkGradientEndBackground">@color/photonViolet40</item>
        <item name="onboardingSelected">@color/onboarding_illustration_selected_normal_theme</item>
        <item name="onboardingDeselected">@color/onboarding_illustration_deselected_normal_theme</item>
        <item name="addOnPrivateBrowsingExteriorCircleBackground">@color/add_on_private_browsing_exterior_circle_background_normal_theme</item>
        <item name="mozacPromptLoginEditTextCursorColor">@color/prompt_login_edit_text_cursor_color_normal_theme</item>
        <item name="awesomeBarIndicatorColor">@color/search_suggestion_indicator_icon_color_normal_theme</item>
        <item name="awesomeBarIndicatorBookmarkColor">@color/search_suggestion_indicator_icon_bookmark_color_normal_theme</item>
        <item name="preferenceSectionHeader">@color/wx_light_grey_text_color_accent</item>
        <item name="selectPromptHeaderTextColor">@color/wx_light_grey_text_color_accent</item>
        <item name="menuItemButtonTintColor">@color/wx_light_grey_text_color_accent</item>

        <!-- Shared widget colors -->
        <item name="mozac_primary_text_color">@color/wx_light_grey_text_color_primary</item>
        <item name="mozac_caption_text_color">@color/wx_light_grey_text_color_secondary</item>
        <item name="mozac_widget_favicon_background_color">@color/wx_light_grey_layer_color_2</item>
        <item name="mozac_widget_favicon_border_color">@color/wx_light_grey_border_color_primary</item>

        <!-- Drawables -->
        <item name="waterfoxLogo">@drawable/ic_logo_wordmark_normal</item>
        <item name="homeBackground">@color/wx_light_grey_layer_color_1</item>
        <item name="bottomBarBackground">@drawable/home_bottom_bar_background</item>
        <item name="bottomBarBackgroundTop">@drawable/home_bottom_bar_background_top</item>
        <item name="privateBrowsingButtonBackground">@android:color/transparent</item>
        <item name="privateBrowsingButtonAccent">@color/wx_light_grey_text_color_primary</item>
    </style>


